{
  "manifest_version": 3,
  "name": "Nomi",
  "version": "1.0.1",
  "description": "Capture thoughts and organize them into actionable calendar events",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://127.0.0.1:7242/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3001 http://127.0.0.1:7242"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  }
}

